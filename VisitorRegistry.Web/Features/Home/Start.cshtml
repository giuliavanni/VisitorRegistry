@{
    ViewBag.Title = "Registro Visitatori";
}

<div class="container d-flex flex-column justify-content-center align-items-center mt-5">

    <h1 class="mb-3">Benvenuto</h1>
    <p class="text-muted mb-4">
        Seleziona cosa desideri fare
    </p>

    <div class="d-grid gap-3 col-12 col-md-6">

        <!-- Prima visita -->
        <a class="btn btn-primary btn-lg"
           href="@Url.Action("Register", "Home")">
            👤 È la tua prima visita
        </a>

        <!-- Check-in -->
        <a class="btn btn-success btn-lg"
           href="@Url.Action("Scan", "Presence", new { mode = "in"})">
            ✅ Devo entrare
        </a>

        <!-- Check-out -->
        <a class="btn btn-danger btn-lg"
           href="@Url.Action("Scan", "Presence", new { mode = "out"})">
            🚪 Devo uscire
        </a>

    </div>
</div>
