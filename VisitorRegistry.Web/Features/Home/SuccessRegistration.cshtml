@{
    ViewBag.Title = "Registrazione completata";
}

<div class="container py-5 text-center">

    <h1 class="display-4 mb-4">✅ Accesso completato!</h1>


    <p class="fs-4 mt-3"> Benvenuto <strong>@ViewBag.Nome</strong></p>

    <p class="text-muted"> La registrazione è stata completata e il tuo ingresso è stato registrato automaticamente.</p>

    <div class="qr-code-container mb-4">
        <p class="mb-2">Mostra questo QR code per il check-out:</p>
        <img src="data:image/png;base64,@ViewBag.QrCodeImage" alt="QR Code" class="qr-code-img rounded shadow-sm" />
        <p class="mt-2 small text-muted">Contenuto QR: <strong>@ViewBag.QrContent</strong></p>
    </div>

    <div class="d-flex justify-content-center align-items-center gap-4 flex-wrap">

        <!-- Checkout -->
        <a href="@Url.Action("Scan", "Presence", new { mode = "out" })"
           class="text-muted small text-decoration-underline">
            Effettua check-out
        </a>

       
        <span class="text-muted small"></span>

        <!-- Nuovo visitatore -->
        <a href="@Url.Action("Register", "Home")"
           class="btn btn-outline-primary btn-md px-4">
            Nuovo visitatore
        </a>

    </div>


</div>

<style>
    .qr-code-container img.qr-code-img {
        width: 220px;
        height: 220px;
        transition: transform 0.2s;
    }

        .qr-code-container img.qr-code-img:hover {
            transform: scale(1.05);
        }

    
    body {
        background-color: #f8f9fa;
    }

    .btn-lg {
        min-width: 160px;
    }
</style>
