@{
    ViewBag.Title = "Registrazione completata";
}

<h2>Registrazione completata</h2>

<p>Il visitatore è stato registrato correttamente.</p>

<div class="qr-code-container text-center">
    <p>QR code generato:</p>
    <img src="data:image/png;base64,@ViewBag.QrCodeImage" alt="QR Code" />
</div>

<div class="mt-3 text-center">
    <p>
        Contenuto QR: <strong>@ViewBag.QrContent</strong>
    </p>

    <!-- Bottone per fare Check-Out -->
    <a href="@Url.Action("Scan", "Presence")" class="btn btn-warning">
        Effettua Check-Out
    </a>

    <!-- Bottone per tornare alla Home / Nuovo visitatore -->
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
        Nuovo visitatore
    </a>
</div>

<style>
    .qr-code-container img {
        width: 200px;
        height: 200px;
    }
</style>
