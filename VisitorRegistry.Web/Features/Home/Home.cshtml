@model VisitorRegistry.Web.Features.Home.VisitorViewModel

<h1>Nuovo Visitatore</h1>

<form asp-action="Index" method="post">
    <div>
        <label asp-for="Nome"></label>
        <input asp-for="Nome" />
        <span asp-validation-for="Nome" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Cognome"></label>
        <input asp-for="Cognome" />
        <span asp-validation-for="Cognome" style="color:red"></span>
    </div>

    <button type="submit">Salva Visitatore</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
