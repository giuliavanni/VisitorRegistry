@model VisitorRegistry.Web.Features.Home.VisitorViewModel

<h1 class="text-center mb-4">Nuovo Visitatore</h1>

<form asp-controller="Home"
      asp-action="Register"
      method="post"
      class="container">

    @Html.AntiForgeryToken()

    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">

            <div class="card p-4 shadow-sm">

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cognome" class="form-label"></label>
                    <input asp-for="Cognome" class="form-control" />
                    <span asp-validation-for="Cognome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ditta" class="form-label"></label>
                    <input asp-for="Ditta" class="form-control" />
                    <span asp-validation-for="Ditta" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Referente" class="form-label"></label>
                    <input asp-for="Referente" class="form-control" />
                    <span asp-validation-for="Referente" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    Salva Visitatore
                </button>

            </div>

            <div class="privacy-note">
                <p>
                    Ai sensi dell’art. 13 del Regolamento (UE) 2016/679 (GDPR), i dati personali forniti
                    saranno trattati esclusivamente per finalità di gestione e sicurezza degli accessi
                    ai locali aziendali.
                    <a href="/PrivacyPolicy.html" target="_blank">
                        Informativa privacy
                    </a>
                </p>
            </div>

        </div>
    </div>
</form>

<div style="position: fixed; bottom: 20px; right: 20px;">
    <a asp-controller="Login"
       asp-action="Login"
       class="btn btn-outline-dark btn-sm">
        Admin
    </a>
</div>

<style>
    .privacy-note {
        margin-top: 25px;
        padding: 14px 18px;
        background-color: #f8fafc;
        border-left: 4px solid #0d6efd;
        border-radius: 6px;
        font-size: 0.85rem;
        color: #475569;
        line-height: 1.5;
    }

        .privacy-note p {
            margin: 0;
        }

        .privacy-note a {
            color: #2563eb;
            font-weight: 600;
            text-decoration: none;
            white-space: nowrap;
        }

            .privacy-note a:hover {
                text-decoration: underline;
            }
</style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

