@model VisitorRegistry.Web.Features.Home.VisitorViewModel

<h1 class="text-center mb-4">Nuovo Visitatore</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">

            <form asp-action="Index" method="post" class="card p-4 shadow-sm">

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cognome" class="form-label"></label>
                    <input asp-for="Cognome" class="form-control" />
                    <span asp-validation-for="Cognome" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    Salva Visitatore
                </button>

            </form>

        </div>
    </div>
</div>

<div style="position: fixed; bottom: 20px; right: 20px;">
    <a asp-controller="Login"
       asp-action="Login"
       class="btn btn-outline-dark btn-sm">
        Admin
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
