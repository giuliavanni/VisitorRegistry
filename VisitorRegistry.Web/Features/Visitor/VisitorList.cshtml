@model IEnumerable<VisitorRegistry.Services.Visitors.VisitorListDTO>


<h2>Elenco Visitatori</h2>

<!-- Toolbar: ricerca, filtro data, aggiungi, stampa -->
<div class="d-flex mb-3 align-items-center gap-2">
    <!-- Ricerca per nome -->
    <input type="text" id="searchName" class="form-control form-control-sm" placeholder="Cerca per nome...">

    <!-- Filtro per data -->
    <input type="date" id="filterDate" class="form-control form-control-sm">

    <!-- Aggiungi nuovo visitatore -->
    <button id="addVisitorBtn" type="button" class="btn btn-success btn-sm">
        ‚ûï Aggiungi
    </button>

    <!-- Stampa -->
    <button id="printBtn" type="button" class="btn btn-secondary btn-sm">
        üñ®Ô∏è Stampa
    </button>
</div>

<table class="table" id="visitorTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Stato Visita</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Gestione</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visitor in Model)
        {
            <tr>
                <td>@visitor.Id</td>
                <td>@visitor.Nome</td>
                <td>@visitor.Cognome</td>
                <td class="visit-status">
                    @if (visitor.CheckIn == default)
                    {
                        <span class="badge bg-warning">Visita programmata</span>
                    }
                    else if (visitor.CheckOut == null)
                    {
                        <span class="badge bg-success">Visita in corso</span>
                        <div class="mt-1">
                            <button class="btn btn-danger btn-sm force-checkout-btn"
                                    data-presence-id="@visitor.CurrentPresenceId"
                                    @(visitor.CheckOut == null ? "" : "disabled")>
                                Forza Check-Out
                            </button>
                        </div>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Visita terminata</span>
                    }
                </td>
                <td>@(visitor.CheckIn.HasValue? visitor.CheckIn.Value.ToString("dd/MM/yyyy HH:mm") : "‚Äî")</td>
                <td>@(visitor.CheckOut.HasValue? visitor.CheckOut.Value.ToString("dd/MM/yyyy HH:mm") : "‚Äî")</td>
                <td>
                    <button class="btn btn-info btn-sm me-1"
                            data-bs-toggle="modal"
                            data-bs-target="#detailsModal"
                            data-presence-id="@visitor.Id">
                        Dettagli visita
                    </button>
                </td>
            </tr>
        }

        <!-- Riga aggiunta nuovo visitatore (inizialmente nascosta) -->
        <tr id="newVisitorRowTable" style="display:none;">
            <td>‚Äî</td>
            <td><input type="text" id="newNome" class="form-control form-control-sm" placeholder="Nome"></td>
            <td><input type="text" id="newCognome" class="form-control form-control-sm" placeholder="Cognome"></td>
            <td>‚Äî</td>
            <td><input type="datetime-local" id="newCheckIn" class="form-control form-control-sm"></td>
            <td><input type="datetime-local" id="newCheckOut" class="form-control form-control-sm"></td>
            <td class="d-flex gap-1">
                <button type="button" id="saveNewVisitorBtn" class="btn btn-primary btn-sm">üíæ Salva</button>
                <button type="button" id="cancelNewVisitorBtn" class="btn btn-danger btn-sm">‚ùå</button>
            </td>
        </tr>
    </tbody>
</table>

<!-- Modal Dettagli -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Dettagli visita</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
            </div>
            <div class="modal-body" id="modalContent">
                <p class="text-center">Caricamento...</p>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/presenceModal.js" asp-append-version="true"></script>
<script src="~/js/visitorTable.js" asp-append-version="true"></script>
