@model IEnumerable<VisitorRegistry.Services.Visitors.VisitorListDTO>

<h1 class="text-center my-4">Dashboard Generale</h1>

<div id="visitorApp" class="container-xl">

    <h2>Elenco Visitatori</h2>

    <!-- Toolbar -->
    <div class="d-flex mb-3 align-items-center gap-2">
        <input type="text" class="form-control form-control-sm"
               placeholder="Cerca per nome..." v-model="search">

        <button class="btn btn-success btn-sm"
                v-on:click="openAddModal">
                Aggiungi visitatore
        </button>
    </div>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Cognome</th>
                <th>Stato visita</th>
                <th>Azioni</th>
            </tr>
        </thead>

        <tbody>
            <tr v-for="v in filteredVisitors" :key="v.Id">
                <td>{{ v.Nome }}</td>
                <td>{{ v.Cognome }}</td>

                <td>
                    <!-- Visita programmata -->
                    <span v-if="!v.CheckIn"
                          class="badge rounded-pill bg-warning text-dark fs-6 px-3 py-2 fw-semibold">
                        Visita programmata
                    </span>

                    <!-- Visita in corso -->
                    <span v-else-if="v.CheckIn && !v.CheckOut"
                          class="badge rounded-pill bg-success fs-6 px-3 py-2 fw-bold shadow-sm">
                        Visita in corso
                    </span>

                    <!-- Visita terminata -->
                    <span v-else
                          class="badge rounded-pill bg-secondary fs-6 px-3 py-2 fw-semibold">
                        Visita terminata
                    </span>
                </td>

                <td>
                    <!-- Visita programmata mostra solo dettagli -->
                    <div v-if="!v.CheckIn" class="d-flex gap-1">
                        <button class="btn btn-outline-info btn-sm"
                                v-on:click="openPlannedDetails(v.Id)">
                             Dettagli visita
                        </button>
                    </div>

                    <!-- Visita in corso , mostra Forza Check-Out e dettagli -->
                    <div v-else-if="v.CheckIn && !v.CheckOut" class="d-flex gap-1">
                        <button class="btn btn-warning btn-sm"
                                v-on:click="forceCheckout(v)">
                            Forza Check-Out
                        </button>
                        <button class="btn btn-info btn-sm"
                                v-on:click="openDetails(v.CurrentPresenceId, v.Id)">
                             Dettagli
                        </button>
                    </div>

                    <!-- Visita terminata: solo dettagli -->
                    <div v-else class="d-flex gap-1">
                        <button class="btn btn-info btn-sm"
                                v-on:click="openDetails(v.CurrentPresenceId, v.Id)">
                             Dettagli visita
                        </button>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <!-- Modal aggiungere nuovo visitatore -->
    <div class="modal fade" id="addVisitorModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Aggiungi nuovo visitatore</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nome *</label>
                        <input type="text"
                               class="form-control"
                               v-model="newVisitor.Nome"
                               placeholder="Inserisci nome">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Cognome *</label>
                        <input type="text"
                               class="form-control"
                               v-model="newVisitor.Cognome"
                               placeholder="Inserisci cognome">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Ditta</label>
                        <input type="text"
                               class="form-control"
                               v-model="newVisitor.Ditta"
                               placeholder="Inserisci ditta (facoltativo)">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Referente</label>
                        <input type="text"
                               class="form-control"
                               v-model="newVisitor.Referente"
                               placeholder="Inserisci referente (facoltativo)">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Data visita</label>
                        <input type="datetime-local"
                               class="form-control"
                               v-model="newVisitor.DataVisita">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Check-in (facoltativo)</label>
                        <input type="datetime-local"
                               class="form-control"
                               v-model="newVisitor.CheckIn">
                        <small class="text-muted">Lascia vuoto per visita programmata</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Check-out (facoltativo)</label>
                        <input type="datetime-local"
                               class="form-control"
                               v-model="newVisitor.CheckOut">
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">
                        Annulla
                    </button>
                    <button class="btn btn-success" v-on:click="saveNewVisitor">
                        üíæ Salva visitatore
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Dettagli visita -->
    <div class="modal fade" id="detailsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Dettagli visita</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">


                    <p v-if="loading" class="text-center">
                        Caricamento...
                    </p>


                    <div v-else-if="visitor && !editMode">
                        <p><strong>Nome:</strong> {{ visitor.nome }}</p>
                        <p><strong>Cognome:</strong> {{ visitor.cognome }}</p>
                        <p><strong>Ditta:</strong> {{ visitor.ditta || '-' }}</p>
                        <p><strong>Referente:</strong> {{ visitor.referente || '-' }}</p>

                        <p><strong>Check-in:</strong> {{ formatDateTime(visitor.checkInTime) }}</p>
                        <p><strong>Check-out:</strong> {{ formatDateTime(visitor.checkOutTime) }}</p>

                        <hr class="my-3">

                        <div class="text-center">
                            <div id="qrCodeDisplay" class="d-inline-block"></div>
                            <p class="mt-2 text-muted small">
                                Codice: {{ visitor.qrCode }}
                            </p>
                            <button class="btn btn-outline-primary btn-sm mt-2"
                                    v-on:click="downloadQRCode('visitor')">
                                üì• Scarica QR Code
                            </button>
                        </div>

                        <div class="d-flex gap-2 mt-3">
                            <button class="btn btn-warning" v-on:click="enableEdit">
                                ‚úèÔ∏è Modifica
                            </button>

                            <button class="btn btn-danger" v-on:click="deleteVisitorFromModal">
                                üóëÔ∏è Elimina visitatore
                            </button>
                        </div>
                    </div>

                    <!-- modifica -->
                    <div v-else-if="editVisitor && editMode">

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Nome</label>
                            <input type="text"
                                   class="form-control"
                                   v-model="editVisitor.nome">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Cognome</label>
                            <input type="text"
                                   class="form-control"
                                   v-model="editVisitor.cognome">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Ditta</label>
                            <input type="text"
                                   class="form-control"
                                   v-model="editVisitor.ditta">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Referente</label>
                            <input type="text"
                                   class="form-control"
                                   v-model="editVisitor.referente">
                        </div>

                        <div class="d-flex gap-2 mt-3">
                            <button class="btn btn-success"
                                    v-on:click="save">
                                üíæ Salva
                            </button>

                            <button class="btn btn-secondary"
                                    v-on:click="cancelEdit">
                                ‚ùå Annulla
                            </button>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- modal dettagli per visita programmata -->
    <div class="modal fade" id="plannedDetailsModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Dettagli visita programmata</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <!-- LOADING -->
                    <p v-if="loading" class="text-center">
                        Caricamento...
                    </p>

                    <!-- VIEW -->
                    <div v-else-if="plannedVisitor && !plannedEditMode">
                        <p><strong>Nome:</strong> {{ plannedVisitor.nome }}</p>
                        <p><strong>Cognome:</strong> {{ plannedVisitor.cognome }}</p>
                        <p><strong>Ditta:</strong> {{ plannedVisitor.ditta || '-' }}</p>
                        <p><strong>Referente:</strong> {{ plannedVisitor.referente || '-' }}</p>
                        <p><strong>Data visita:</strong> {{ formatDateTime(plannedVisitor.dataVisita) }}</p>

                        <hr class="my-3">

                        <div class="text-center">
                            <div id="qrCodeDisplayPlanned" class="d-inline-block"></div>
                            <p class="mt-2 text-muted small">
                                Codice: {{ plannedVisitor.qrCode }}
                            </p>
                            <button class="btn btn-outline-primary btn-sm mt-2"
                                    v-on:click="downloadQRCode('planned')">
                                üì• Scarica QR Code
                            </button>
                        </div>
                        <div class="alert alert-info mt-3">
                            Visita programmata ‚Äì check-in non ancora effettuato
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-warning"
                                    v-on:click="enablePlannedEdit">
                                ‚úèÔ∏è Modifica
                            </button>

                            <button class="btn btn-danger"
                                    v-on:click="deleteVisitorFromPlannedModal">
                                üóëÔ∏è Elimina visitatore
                            </button>
                        </div>
                    </div>

                    <!-- Modifica -->
                    <div v-else-if="plannedVisitor && plannedEditMode">

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Nome</label>
                            <input type="text"
                                   class="form-control"
                                   v-model="plannedVisitor.nome">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Cognome</label>
                            <input type="text"
                                   class="form-control"
                                   v-model="plannedVisitor.cognome">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Ditta</label>
                            <input type="text"
                                   class="form-control"
                                   v-model="plannedVisitor.ditta">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Referente</label>
                            <input type="text"
                                   class="form-control"
                                   v-model="plannedVisitor.referente">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Data visita</label>
                            <input type="datetime-local"
                                   class="form-control"
                                   v-model="plannedVisitor.dataVisita">
                        </div>

                        <div class="d-flex gap-2 mt-3">
                            <button class="btn btn-success"
                                    v-on:click="savePlannedEdit">
                                üíæ Salva
                            </button>

                            <button class="btn btn-secondary"
                                    v-on:click="cancelPlannedEdit">
                                ‚ùå Annulla
                            </button>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Modal Conferma Eliminazione Per evitare alert-->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">‚ö†Ô∏è Conferma Eliminazione</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0">Sei sicura di voler eliminare definitivamente questo visitatore?</p>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" v-on:click="cancelDelete">
                        Annulla
                    </button>
                    <button type="button" class="btn btn-danger" v-on:click="executeDelete">
                        üóëÔ∏è Elimina
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
        <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    {{ toastMessage }}
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
        <div id="errorToast" class="toast align-items-center text-bg-danger border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    {{ toastMessage }}
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

</div>


<script src="https://unpkg.com/vue@3/dist/vue.global.prod.js"></script>
<!-- DATA -->
<script>
    window.initialVisitors = @Html.Raw(
              Newtonsoft.Json.JsonConvert.SerializeObject(Model)
                                );
</script>


<!-- LIB -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>

<!-- APP -->
<script src="~/js/visitorListVue.js"></script>
