@model IEnumerable<VisitorRegistry.Services.Visitors.VisitorListDTO>

<h1 class="text-center my-4">Dashboard Generale</h1>

<div id="visitorApp" class="container-xl">

    <h2>Elenco Visitatori</h2>

    <!-- TOOLBAR -->
    <div class="d-flex mb-3 align-items-center gap-2">
        <input type="text" class="form-control form-control-sm"
               placeholder="Cerca per nome..." v-model="search">

        <input type="date"
               class="form-control form-control-sm"
               v-model="filterDate"
               title="Filtra per data visita">


        <button class="btn btn-outline-success btn-sm"
                v-on:click="showOnlyInProgress = !showOnlyInProgress">
             Visite in corso
            <span class="badge bg-success ms-1">
                {{ visitors.filter(v => v.CheckIn && !v.CheckOut).length }}
            </span>
        </button>


        <button class="btn btn-outline-secondary btn-sm"
                v-on:click="printTable">
            <i class="bi bi-printer me-1"></i>
            üñ®Ô∏è Stampa
        </button>
    </div>

    <!-- TABELLA -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Cognome</th>
                <th>Stato visita</th>
                <th>Check-in</th>
                <th>Check-out</th>
                <th>Azioni</th>
            </tr>
        </thead>

        <tbody>
            <tr v-for="v in filteredVisitors" :key="v.Id">
                <td>{{ v.Nome }}</td>
                <td>{{ v.Cognome }}</td>

                <td>
                    <!-- Visita programmata -->
                    <span v-if="!v.CheckIn"
                          class="badge rounded-pill bg-warning text-dark
                 fs-6 px-3 py-2 fw-semibold">
                         Visita programmata
                    </span>

                    <!-- Visita in corso (EVIDENZA) -->
                    <span v-else-if="v.CheckIn && !v.CheckOut"
                          class="badge rounded-pill bg-success
                 fs-6 px-3 py-2 fw-bold shadow-sm">
                         Visita in corso
                    </span>

                    <!-- Visita terminata -->
                    <span v-else
                          class="badge rounded-pill bg-secondary
                 fs-6 px-3 py-2 fw-semibold">
                         Visita terminata
                    </span>
                </td>


                <td>{{ formatDateTime(v.CheckIn) }}</td>
                <td>
                    <!-- visita programmata -->
                    <span v-if="!v.CheckIn">‚Äî</span>

                    <!-- visita in corso -->
                    <button v-else-if="v.CheckIn && !v.CheckOut"
                            class="btn btn-outline-secondary btn-sm"
                            v-on:click="forceCheckout(v)">
                         Forza Check-out
                    </button>

                    <!-- visita terminata -->
                    <span v-else>
                        {{ formatDateTime(v.CheckOut) }}
                    </span>
                </td>

                <td>
                    <button class="btn btn-info btn-sm"
                            v-on:click="openDetails(v.CurrentPresenceId)">
                        Dettagli visita
                    </button>
                </td>
            </tr>
        </tbody>
    </table>

    <!-- MODAL -->
    <div class="modal fade" id="detailsModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Dettagli visita</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <!-- LOADING -->
                    <p v-if="loading" class="text-center">
                        Caricamento...
                    </p>

                    <!-- VIEW -->
                    <div v-else-if="visitor && !editMode">
                        <p><strong>Nome:</strong> {{ visitor.nome }}</p>
                        <p><strong>Cognome:</strong> {{ visitor.cognome }}</p>
                        <p><strong>Ditta:</strong> {{ visitor.ditta || '-' }}</p>
                        <p><strong>Referente:</strong> {{ visitor.referente || '-' }}</p>

                        <p><strong>Check-in:</strong> {{ formatDateTime(visitor.checkInTime) }}</p>
                        <p><strong>Check-out:</strong> {{ formatDateTime(visitor.checkOutTime) }}</p>

                        <hr class="my-3">

                        <div class="text-center">

                            <div class="text-center">
                                <div id="qrCode" class="d-inline-block"></div>
                                <p class="mt-2 text-muted small">
                                    Codice: {{ visitor.qrCode }}
                                </p>
                            </div>

                        </div>


                        <button class="btn btn-warning" v-on:click="enableEdit">
                            ‚úèÔ∏è Modifica
                        </button>
                    </div>

                    <!-- EDIT -->
                    <div v-else-if="editVisitor && editMode">

                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                Nome
                            </label>
                            <input type="text"
                                   class="form-control"
                                   v-model="editVisitor.nome">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                Cognome
                            </label>
                            <input type="text"
                                   class="form-control"
                                   v-model="editVisitor.cognome">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                Ditta
                            </label>
                            <input type="text"
                                   class="form-control"
                                   v-model="editVisitor.ditta">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                Referente
                            </label>
                            <input type="text"
                                   class="form-control"
                                   v-model="editVisitor.referente">
                        </div>

                        <div class="d-flex gap-2 mt-3">
                            <button class="btn btn-success"
                                    v-on:click="save">
                                üíæ Salva
                            </button>

                            <button class="btn btn-secondary"
                                    v-on:click="cancelEdit">
                                ‚ùå Annulla
                            </button>
                        </div>

                    </div>



                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://unpkg.com/vue@3/dist/vue.global.prod.js"></script>
<!-- DATA -->
<script>
    window.initialVisitors = @Html.Raw(
                Newtonsoft.Json.JsonConvert.SerializeObject(Model)
        );
</script>


<!-- LIB -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>

<!-- APP -->
<script src="~/js/visitorListVue.js"></script>
