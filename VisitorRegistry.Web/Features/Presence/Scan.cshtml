@{
    ViewBag.Title = "Check-Out QR";
}

<h2>Check-Out</h2>

@if (ViewBag.Message != null)
{
    <div class="alert @(ViewBag.Success ? "alert-success" : "alert-danger")">
        @ViewBag.Message
    </div>
}

<form asp-action="Scan" method="post">
    <div class="form-group">
        <label for="qrCode">Inserisci QR code:</label>
        <input type="text" id="qrCode" name="qrCode" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success mt-2">Invia</button>

    <!-- Bottone per tornare alla Home / Nuovo visitatore -->
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
        Nuovo visitatore
    </a>
</form>
